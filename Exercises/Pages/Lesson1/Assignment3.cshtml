@page
@model Exercises.Pages.Lesson1.Assignment3

@{
    Layout = null;
}

<div>
    <p id="result">@Model.Result</p>
</div>

<form id="calculatorForm" method="post">
    <input type="hidden" value="2" name="hiddenInput">
    <input type="text" id="input" name="input">
    <button name="addBtn" id="addBtn" type="submit" asp-page-handler="AddBtn">+</button>
    <button name="subBtn" id="subBtn" type="submit" asp-page-handler="SubBtn">-</button>
    <button name="mulBtn" id="mulBtn" type="submit" asp-page-handler="MulBtn">*</button>
    <button name="divBtn" id="divBtn" type="submit" asp-page-handler="DivBtn">/</button>
</form>


